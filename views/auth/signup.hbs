<div class="container">
  <div class="row mt-4 align-items-center">
    <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
      <img
        src="/public/images/undraw_window_shopping_re_0kbm.svg"
        class="img-fluid mb-3 d-none d-md-block"
      />
      <h1>Sign up</h1>
      <p class="font-italic text-muted">
        <a href="https://www.freepik.com/vectors/logo">
        </a>
      </p>
    </div>

    <!-- Sign up Form -->
    <div class="col-md-7 col-lg-6 ml-auto">
      <form action="/auth/signup" method="POST">
        <div class="row">

          <!-- First Name -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-user"></span>
            </div>
            <input
              id="firstName"
              type="text"
              name="firstName"
              placeholder="First Name"
              class="form-control border-left-0 border-md"
            />
          </div>

          <!-- Last Name -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-user"></span>
            </div>
            <input
              id="lastName"
              type="text"
              name="lastName"
              placeholder="Last Name"
              class="form-control border-left-0 border-md"
            />
          </div>

          {{! <!-- Username -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-hashtag"></span>
            </div>
            <input
              id="username"
              type="username"
              name="username"
              placeholder="Username"
              class="form-control border-left-0 border-md"
            />
          </div> }}

          <!-- Date of Birth -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-calendar"></span>
            </div>
            <input
              id="dob"
              type="text"
              name="dob"
              placeholder="Date of Birth "
              class="form-control border-left-0 border-md"
              data-provide="datepicker"
              required
            />
          </div>

          <!-- Email -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-envelope"></span>
            </div>
            <input
              id="email"
              type="email"
              name="email"
              placeholder="Email"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          <!-- Password -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-lock"></span>
            </div>
            <input
              id="password"
              type="password"
              name="password"
              placeholder="Password"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          <!-- Password -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-lock"></span>
            </div>
            <input
              id="passwordConfirmation"
              type="password"
              name="passwordConfirmation"
              placeholder="Confirm Password"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          <!-- Address -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text icon fa fa-map-marker"></span>
            </div>
            <input
              id="address"
              type="address"
              name="address"
              placeholder="Address"
              class="form-control border-left-0 border-md"
              required
            />
          </div>

          {{! <!-- Password Confirmation -->
          <div class='input-group col-lg-6 mb-4'>
            <div class='input-group-prepend'>
              <span
                class='input-group-text px-4'
              >
                <i class='fa fa-lock text-muted'></i>
              </span>
            </div>
            <input
              id='passwordConfirmation'
              type='text'
              name='passwordConfirmation'
              placeholder='Confirm Password'
              class='form-control border-left-0 border-md'
            />
          </div> }}

          <!-- reCAPTCHA -->
          <div class="form-group col-lg-6 mb-4">
            <div class="g-recaptcha" data-sitekey={{recaptcha}}></div>
          </div>

          <!-- Submit Button -->
          <div class="form-group col-lg-12 mx-auto mb-0">
            <button type="submit" class="btn btn-primary btn-block py-2 submit">
              Create your account
            </button>
          </div>

          <!-- Divider Text -->
          <div
            class="form-group col-lg-12 mx-auto d-flex align-items-center my-4"
          >
            <div class="border-bottom w-100 ml-5"></div>
            <span class="px-2 small text-muted font-weight-bold text-muted">OR
            </span>
            <div class="border-bottom w-100 mr-5"></div>
          </div>

          <!-- Already Registered -->
          <div class="text-center w-100">
            <p class="text-muted font-weight-bold">Already Registered?
              <a href="/auth/login" class="text-primary ml-2">Login</a></p>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>

{{#section "stylesheets"}}
